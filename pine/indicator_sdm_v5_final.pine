    ts_color = trend_score >= 60 ? color.new(color.green, 20) : (trend_score <= 40 ? color.new(color.red, 20) : color.new(color.gray, 80))
    table.cell(panel, 1, 1, str.tostring(trend_score, "#.0"), bgcolor=ts_color, text_color=color.white)
    
