rsi_buy_min = input.float(50, "RSI ìµœì†Œê°’ (ë§¤ìˆ˜)", minval=30, maxval=70, step=5, group=g_signal)
vol_mult_min = input.float(1.2, "ê±°ë˜ëŸ‰ë°°ìˆ˜ ìµœì†Œê°’", minval=0.5, maxval=3, step=0.1, group=g_signal)

